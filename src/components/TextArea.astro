---
import { getLangFromUrl } from "@i18n/utils";
import type { HtmlHTMLAttributes } from "react";
interface Props extends HtmlHTMLAttributes<HTMLTextAreaElement> {
  name: string;
}
const { className, ...props } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<textarea
  class={`${className} ${
    lang == "ar" && "text-right"
  }  min-h-[200px] max-h-[200px] w-full py-2 px-4 block border-2 border-gray-200 text-black opacity-95 placeholder:text-black placeholder:text-opacity-50 rounded-md text-sm !outline-offset-[-2px]`}
  {...props}></textarea>
