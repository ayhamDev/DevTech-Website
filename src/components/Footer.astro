---
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import Wrapper from "@layouts/Wrapper.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="close">
  <Wrapper>
    <footer class="flex justify-between items-center py-12 gap-16 flex-wrap">
      <div class="flex flex-col flex-1 items-center min-w-[250px] gap-14">
        <img width="130px" src="/images/FooterLogo.svg" alt="devtech" />
        <ul class="flex justify-between items-center gap-10">
          <li>
            <a href="">
              <img width="20px" src="/images/twitter.svg" />
            </a>
          </li>
          <li>
            <a href="">
              <img width="20px" src="/images/linkedin.svg" />
            </a>
          </li>
          <li>
            <a href="">
              <img width="20px" src="/images/facebook.svg" />
            </a>
          </li>
          <li>
            <a href="">
              <img width="20px" src="/images/instagram.svg" />
            </a>
          </li>
        </ul>
      </div>
      <div class="flex flex-col flex-1 text-white items-center min-w-[250px]">
        <p class="body1">{lang == "en" ? "Services" : "الخدمات"}</p>
        <ul class="opacity-70 mt-5 flex flex-col gap-4 items-center">
          <li>
            <a class="body2 font-[300] service_link" href="#/Consultation"
              >{t("service.consultation")}</a
            >
          </li>
          <li>
            <a class="body2 font-[300] service_link" href="#/Marketing"
              >{t("service.marketing")}</a
            >
          </li>
          <li>
            <a class="body2 font-[300] service_link" href="#/Design"
              >{t("service.design")}</a
            >
          </li>
          <li>
            <a class="body2 font-[300] service_link" href="#/Development"
              >{t("service.development")}</a
            >
          </li>
        </ul>
      </div>
      <div class="flex flex-col flex-1 text-white items-center min-w-[250px]">
        <p class="body1">{lang == "en" ? "Links" : "الروابط"}</p>
        <ul class="opacity-70 mt-5 flex flex-col gap-4 items-center">
          <li>
            <a class="body2 font-[300]" data-section="HeroSection"
              >{t("nav.home")}</a
            >
          </li>
          <li>
            <a class="body2 font-[300]" data-section="OurServices"
              >{t("nav.services")}</a
            >
          </li>
          <li>
            <a class="body2 font-[300]" data-section="Aboutus"
              >{t("nav.aboutus")}</a
            >
          </li>
          <li>
            <a class="body2 font-[300] contactus_btns"
              >{t("button.contactus")}</a>
          </li>
        </ul>
      </div>
    </footer>
  </Wrapper>
  <div
    class="w-full py-3 text-white backdrop-blur-md flex gap-4 items-center justify-center bg-white bg-opacity-30 mt-14"
  >
    <svg
      width="20"
      height="20"
      viewBox="0 0 20 20"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M9.88 7.14C11.16 7.2 11.49 8.29 11.51 8.8H13.3C13.22 6.82 11.81 5.61 9.85 5.61C7.64 5.61 6 7 6 10.14C6 12.08 6.93 14.38 9.84 14.38C12.06 14.38 13.25 12.73 13.28 11.43H11.49C11.46 12.02 11.04 12.81 9.86 12.87C8.55 12.83 8 11.81 8 10.14C8 7.25 9.28 7.16 9.88 7.14ZM10 0C4.48 0 0 4.48 0 10C0 15.52 4.48 20 10 20C15.52 20 20 15.52 20 10C20 4.48 15.52 0 10 0ZM10 18C5.59 18 2 14.41 2 10C2 5.59 5.59 2 10 2C14.41 2 18 5.59 18 10C18 14.41 14.41 18 10 18Z"
        fill="white"></path>
    </svg>

    <p>Devtech - all rights reserved<p></p></p>
  </div>
</div>
