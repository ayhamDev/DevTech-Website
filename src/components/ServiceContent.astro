---
    import Services from "@content/Services"
    import { getLangFromUrl } from "@i18n/utils";
import Wrapper from "@layouts/Wrapper.astro";
import { Image } from "astro:assets";
    const lang = getLangFromUrl(Astro.url)
---

<div class="ServiceContentContainer hidden">
    <Wrapper>
    {
        Services.map(service => (
            <div data-service={service.type} class="serivce_content flex justify-between items-start">
                <div class="flex flex-col gap-6]">
                {
                 service.details.map(det => (
                    <div class="flex flex-col gap-2">
                        <h4>{ lang == "en" ? det.title : det.title_ar }</h4>
                        <p class="opacity-80">{ lang == "en" ? det.text : det.text_ar }</p>
                    </div>
           
                 ))   
                }
                </div>
  
                <div>
                    {

                        service.imgs.map(img => (
                            <div>
                                <Image src={img} alt={"serivce image"} />
                            </div>
                        ))
                    }
                </div>
            </div>
        ))
    }    
    </Wrapper>
</div>
<script src="@script/ServiceContent.ts"></script>